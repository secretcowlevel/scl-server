{
  "name": "api",
  "version": "0.0.1",
  "description": "API Foundation",
  "main": "dist/index.js",
  "license": "MIT",
  "private": false,
  "scripts": {
    "jest": "jest --coverage",
    "lint": "yarn eslint --fix ./src/",
    "prettier": "prettier --write src/**",
    "lint:fix": "yarn lint && yarn prettier",
    "start": "node src/index.ts",
    "test": "NODE_ENV=test yarn jest --detectOpenHandles",
    "typecheck": "node_modules/.bin/tsc --noEmit",
    "prepare": "husky install",
    "dev:tsc": "tsc --watch -p .",
    "dev:serve": "nodemon -e js dist/src/index.js | pino-pretty",
    "dev": "run-p dev:*",
    "prod:serve": "node dist/src/index.js",
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "setup-local-database": "docker run -d  --name scl-server-test  -p 27888:27017 -e MONGO_INITDB_ROOT_USERNAME=sclmongoadmin -e MONGO_INITDB_ROOT_PASSWORD=m00!m00! mongo",
    "clean:install": "rm -f package-lock.json && rm -f yarn.lock && rm -rf node_modules && yarn install"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.1",
    "@hapi/code": "^9.0.3",
    "@hapi/lab": "^25.2.0",
    "@secretcowlevel/eslint-config-secretcowlevel": "0.0.10",
    "@types/bcrypt": "^5.0.2",
    "@types/boom": "^7.3.5",
    "@types/hapi__hapi": "^20.0.13",
    "@types/hapi__inert": "^5.2.10",
    "@types/hapi__joi": "^17.1.14",
    "@types/hapi__vision": "^5.5.8",
    "@types/jest": "^29.5.12",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.30",
    "@types/uuid": "^9.0.8",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": ">=15",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.7",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "@types/joi": "^17.2.3",
    "@types/mongoose": "^5.11.97",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "eslint-plugin-prettier": "^5.1.3",
    "hapi-auth-jwt2": "^10.5.1",
    "hapi-pino": "^12.1.0",
    "hapi-swagger": "17.2.1",
    "joi": "17.x",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.3",
    "nodemon": "^3.1.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "stripe": "^11.14.0",
    "typescript": "^5.4.3",
    "uuid": "^9.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
